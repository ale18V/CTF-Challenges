{% extends 'base.jinja' %}

{% block main %}
<h2 class="row center">{{ current_page }}</h2>
<p class="row center">
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        {% for category, message in messages %}
        <b><strong>{{ category | capitalize }}:</strong></b> {{ message | lower }} <br>
        {% endfor %}
    {% else %}
        {% block subtitle %} {% endblock subtitle %}
    {% endif %}

    {% endwith %}
</p>



<div class="row">
    <div class="col s12 m10 l8 xl6 offset-m1 offset-l2 offset-xl3">
        <form action="" method="POST" class="card">
            <div class="card-content no-pad-bot">
                <div class="input-field">
                    <input type="text" name="username">
                    <label for="username">Username</label>
                </div>
                <div class="input-field">
                    <input type="password" name="password">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>
{% if error %}
<p class="row center"><b>ERROR: </b>{{ error }}</p>
{% endif %}
{% endblock main %}